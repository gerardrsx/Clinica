@model IEnumerable<Clinica.Models.Citas>

@{
    ViewBag.Title = "Consultar Citas";
}

<h2>Consultar Citas</h2>

<p>
    @Html.ActionLink("Nueva Cita", "Create")
</p>
<table class="table">
    <tr>
        
        
        <th>
            @Html.DisplayNameFor(model => model.Paciente)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Medico)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FechaCita)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Diagnostico)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FechaDiagnostico)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
       
        
        <td>
            @Html.DisplayFor(modelItem => item.Paciente)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Medico)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FechaCita)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Diagnostico)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FechaDiagnostico)
        </td>
        <td>
            @Html.ActionLink("Modificar", "Edit", new { id=item.IdCita })
         
        </td>
    </tr>
}

</table>

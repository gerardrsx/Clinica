@model IEnumerable<Clinica.Models.Pacientes>

@{
    ViewBag.Title = "Consultar Pacientes";
}

<h2>Consultar Pacientes</h2>

<p>
    @Html.ActionLink("Nuevo Paciente", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nombres)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Apellidos)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DUI)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FechaNacimiento)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FechaRegistro)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nombres)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Apellidos)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DUI)
        </td>
		<td>
			@Convert.ToDateTime(item.FechaNacimiento).ToString("dd/MM/yyyy")
		</td>
		<td>
			@Convert.ToDateTime(item.FechaRegistro).ToString("dd/MM/yyyy")
		</td>
        <td>
            @Html.ActionLink("Modificar", "Edit", new {  id=item.IdPaciente }) |
            @Html.ActionLink("Ver Detalles", "Details", new { id=item.IdPaciente  })
        </td>
    </tr>
}

</table>
